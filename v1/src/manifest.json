{
	"manifest_version": 2,

	"name": "QrShare",
	"description": "Share The Page With QRcode",
	"version": "1.0",

	"icons": {
		"128": "static/img/icon/icon_128.png"
	},

	"browser_action": {
		"default_icon": {
			"19": "static/img/icon/icon_19.png",
			"38": "static/img/icon/icon_38.png"
		},
		"default_title": "Share Your Page",
		"default_popup": "page/popup.html"
	},

	"permissions": [
		"activeTab",
		"https://ajax.googleapis.com/"
	]
}